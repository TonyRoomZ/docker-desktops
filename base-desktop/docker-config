DOCKER_IMAGE_NAME=base-desktop

DOCKER_USER_ARG="--build-arg USER=${USER}"
DOCKER_PASSWORD_ARG="--build-arg PASSWORD=\"${PASSWORD}\""
DOCKER_TIMEZONE_ARG="--build-arg TIMEZONE=\"${TIMEZONE}\""
DOCKER_LANG_ARG="--build-arg LANG_KB=\"${LANG_KB}\""

DOCKER_BUILD_OPTIONS="${DOCKER_USER_ARG} ${DOCKER_PASSWORD_ARG} ${DOCKER_TIMEZONE_ARG} ${DOCKER_LANG_ARG}"
